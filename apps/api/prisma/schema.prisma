generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  sessions  Session[]
  exercises Exercise[]
  sets      Set[]
  PRs       PR[]
}

model Session {
  id         Int      @id @default(autoincrement())
  categories String[]
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  sets       Set[]
  createdAt  DateTime @default(now())
  PRs        PR[]
}

model Exercise {
  id        Int     @id @default(autoincrement())
  name      String
  variation String?
  repRange  String?
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  sets      Set[]
  PRs       PR[]

  muscleGroups MuscleGroup[]
}

model MuscleGroup {
  id           Int     @id @default(autoincrement())
  priority     Int
  vagueName    String
  specificName String?

  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  exerciseId Int

  @@unique([exerciseId, priority])
}

model Set {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  session    Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  sessionId  Int
  userId     Int
  exerciseId Int

  intensity Float
  notes     String?
  repCount  Int
  weightLbs Float
  score     Float

  pr PR[]
}

model PR {
  id Int @id @default(autoincrement())

  score     Float
  weightLbs Float
  repCount  Int
  createdAt DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  session    Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId  Int
  set        Set      @relation(fields: [setId], references: [id], onDelete: Cascade)
  setId      Int      @unique
  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  exerciseId Int
}
